<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/_head')%>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary"> <%- include('partials/_nav') %> </nav>
    <main>  
        <div class="container-fluid d-flex justify-content-center" >

            <% clubs.forEach(club => { %>
                <div class="card border-primary m-5" style="width: 20rem; min-height: 45rem; max-height: max-content; position: absolute; top:50%; left:50%; transform: translate(-50%, -50%);" data-club_id="<%= club.id%>">
                    <div class="card-body">
                        <h2><%= club.name %></h2>
                        <p style="height: 75px;"><%= club.description %></p>
                        <p>Book: <% if(club.club_book == null){ %> 
                                    TBD
                                 <%} else{ %>
                                    <%= club.club_book %>
                                 <%} %>
                            <br>Meeting time: <% if(club.meeting_day == null && club.meeting_time == null){ %> 
                                            TBD
                                            <%} else { %>
                                            <%= club.meeting_day %> @ <%= club.meeting_time %>
                                            <%} %>
                            <br>Start Date: <% if(club.start_date == null){ %> 
                                            TBD
                                            <%} else { %>
                                            <%= club.start_date %>
                                            <%} %>
                            <br>Spots Left: <%= (club.capacity - club.size) %>
                            <br>
                        </p>
                        <% if (club.club_book == null) { %>
                            <img src="/images/tbd-book.png" style="height:20rem"/>
                        <%} else {%>
                            <img src="<%= club.img%>" style="height:20rem"/>
                        <% } %>
                    </div>
                    <div class="buttons d-flex justify-content-center">
                        <button class="dislike btn btn-primary m-2">Pass ):</button>
                        <button class="like btn btn-primary m-2">Join :)</button>
                    </div>
                </div>
            <% }) %>

