    <fieldset>
      <legend>Create Your BookClub!</legend>
      <div class="form-group">
        <label class="col-form-label mt-4" for="inputDefault">Book Club Name:</label>
        <input type="text" class="form-control" placeholder="Name Your Club!" id="inputDefault name" data-com.bitwarden.browser.user-edited="yes">
      </div>
      
      <div class="form-group">
        <label for="exampleSelect1" class="form-label mt-4">How Large Would You Like Your Club To Be?</label>
        <select class="form-select" id="exampleSelect1 capacity">
          <option>Less Than 5 People</option>
          <option>0-5</option>
          <option>6-10</option>
          <option>11-15</option>
          <option>Let The People Decide!</option>
        </select>
      </div>
   
      <div class="form-group">
        <label for="exampleTextarea" class="form-label mt-4">About The Club:</label>
        <textarea class="form-control" id="exampleTextarea description" rows="3"placeholder="Say Something About Your Club! Author, Genre etc."></textarea>
      </div>

      <div class="form-group">
        <label for="exampleSelect1" class="form-label mt-4">What Day Works Best For You?</label>
        <select class="form-select" id="exampleSelect1 meeting_day">
          <option>Monday</option>
          <option>Tuesday</option>
          <option>Wednesday</option>
          <option>Thursday</option>
          <option>Friday</option>
          <option>Saturday</option>
          <option>Sunday</option>
          <option>I'm flexible!</option>
        </select>
      </div>
      <div class="form-group">
        <label for="exampleSelect1" class="form-label mt-4">What Time Works Best For You?</label>
        <select class="form-select" id="exampleSelect1 meeting_time">
          <option>Morning (9AM-11AM est)</option>
          <option>Early Afternoon (12PM-3PM est)</option>
          <option>Late Afternoon (4PM-7PM est)</option>
          <option>Evening (8PM-11PM est)</option>
          <option>I'm flexible!</option>
        </select>
      </div>
      
      <fieldset class="form-group">
        <legend class="mt-4" style="padding:5px">Pick Your Book</legend>
      <div class="form-group">
        <label class="col-form-label mt-4" for="inputDefault">Name:</label>
        <input type="text" class="form-control" placeholder="Book!" id="inputDefault club_book" data-com.bitwarden.browser.user-edited="yes">
      </div>

      <div class="form-group">
